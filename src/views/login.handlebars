<div class="container">
    <div class="row mt-3">
        <h3>Ingresá</h3>
    </div>
    <div class="row">
        <form class="col-auto g-3" id="loginForm">
            <label class="form-label" for="email">Email</label>
            <input class="form-control mb-3" type="text" name="email">
            <label class="form-label" for="password">Contraseña</label>
            <input class="form-control mb-3" type="password" name="password">
            <input class="btn btn-secondary my-3" type="submit">
        </form>
    </div>
    <div class="row">
        <a href="/api/sessions/github"> <button class="btn btn-secondary">Ingresá con GitHub</button></a>
    </div>
    <div class="row my-4">
        <div class="col-auto">
            <p>No tenés usuario aún?</p>
            <button class="btn btn-secondary" id="registerButton">Registrate</button>
        </div>
    </div>
</div>
<script src="/static/js/login.js"></script>
