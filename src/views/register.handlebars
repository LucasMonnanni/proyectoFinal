<div class="container">
    <div class="row mt-3">
        <h3>Registrate</h3>
    </div>
    <div class="row">
        <form class="col-auto g-3" id="registerForm" >
            <label class="form-label" for="firstName" >Nombre</label><br>
            <input class="form-control mb-3" type="text" name="firstName"><br>
            <label class="form-label" for="lastName">Apellido</label><br>
            <input class="form-control mb-3" type="text" name="lastName"><br>
            <label class="form-label" for="age">Edad</label><br>
            <input class="form-control mb-3" type="number" name="age"><br>
            <label class="form-label" for="email">Email</label><br>
            <input class="form-control mb-3" type="text" name="email"><br>
            <label class="form-label" for="password">Contraseña</label><br>
            <input class="form-control mb-3" type="password" name="password"><br>
            <input class="btn btn-secondary my-3" type="submit">
        </form>
    </div>
    <div class="row my-4">
        <div class="col-auto">
            <p>Ya tenés usuario?</p>
            <button class="btn btn-secondary" id="registerButton">Ingresá</button>
        </div>
    </div>
</div>
<script src="/static/js/register.js"></script>
